{
  // Cursor/VSCode + LaTeX Workshop: save -> build -> preview pdf
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
  "latex-workshop.latex.outDir": "%DIR%/Tmp",
  "latex-workshop.latex.rootFile": "Thesis.tex",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk-xe",
      "command": "/Library/TeX/texbin/latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-xelatex",
        "-bibtex",
        "-outdir=%OUTDIR%",
        "-auxdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {
        "PATH": "/Library/TeX/texbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
      }
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (xelatex + bibtex)",
      "tools": [
        "latexmk-xe"
      ]
    }
  ],
  "latex-workshop.latex.recipe.default": "latexmk (xelatex + bibtex)",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.synctex.gz",
    "*.xdv"
  ],
  "latex-workshop.latex.clean.subfolder.enabled": true,
  // Git: 自动刷新文件状态和检测
  "git.autoRefresh": true,
  "git.enabled": true,
  "git.autofetch": true,
  "git.autoRepositoryDetection": true,
  "git.refreshOnWindowFocus": true,
  "git.decorations.enabled": true,
  "git.statusLimit": 10000,
  // 文件监控设置，确保文件变化能被检测到
  "files.watcherExclude": {
    "**/.git/objects/**": false,
    "**/.git/subtree-cache/**": false,
    "**/node_modules/**": true,
    "**/Tmp/**": true
  },
  "files.watcherInclude": [
    "**/*.tex",
    "**/*.bib",
    "**/*.sty",
    "**/*.cls"
  ]
}


